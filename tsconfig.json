{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    /* Importing */
    "baseUrl": ".",
    "paths": {
      "@customTypes": [
        "src/types/index.ts"
      ],
      "@game": [
        "src/game/index.ts"
      ],
      "@render": [
        "src/render/index.ts"
      ],
      "@state": [
        "src/state/index.ts"
      ],
      "@utils": [
        "src/utils/index.ts",
      ]
    }
  },
  "include": [
    "src"
  ]
}